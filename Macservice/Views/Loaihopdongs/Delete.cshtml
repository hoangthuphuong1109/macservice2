@model Macservice.Models.Loaihopdong

@{
    ViewBag.Title = "Xóa loại hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="/Loaihopdongs">Quản lý loại hợp đồng</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h3 class="mB-30" style="color:red">Bạn có chắc chắn muốn xóa loại hợp đồng này?</h3>

<div>
    <hr />
    <table class="table table-bordered table-bordered">
        <tr>
            <th>
                Mã loại hợp đồng
            </th>
            <th>Tên loại hợp đồng</th>
        </tr>
        <tr>
            <td><span>LHD</span>@Html.DisplayFor(model => model.Maloaihopdong)</td>
            <td> @Html.DisplayFor(model => model.Tenloaihopdong)</td>
        </tr>
    </table>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />&nbsp;
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
