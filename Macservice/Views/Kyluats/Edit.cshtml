@model Macservice.Models.Kyluat

@{
    ViewBag.Title = "Cập nhật kỷ luật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="/Kyluats">Quản lý kỷ luật</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h2>Cập nhật kỷ luật</h2>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Makyluat)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Mã kỷ luật <span style="color:red">*</span></label>
                <input type="text" readonly="readonly" value='@("KL"+Model.Makyluat)' class="form-control" />
                @Html.ValidationMessageFor(model => model.Tenkyluat, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Tên kỷ luật <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Tenkyluat, new { htmlAttributes = new { @class = "form-control", @required = "@required" } })
                @Html.ValidationMessageFor(model => model.Tenkyluat, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Nội dung </label>
                @Html.EditorFor(model => model.Noidung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Noidung, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label> Quyết định </label>
                @Html.EditorFor(model => model.Quyetdinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quyetdinh, "", new { @class = "text-danger" })
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
