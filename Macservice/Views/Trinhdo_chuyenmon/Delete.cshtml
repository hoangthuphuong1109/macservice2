@model Macservice.Models.Trinhdo_chuyenmon

@{
    /**/

    ViewBag.Title = "Xác nhận xóa trình độ chuyên môn này";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Trinhdo_chuyenmon">Quản lý trình độ chuyên môn</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h3 class="mB-30" style="color:red">Bạn có chắc chắn muốn xóa trình độ chuyên môn này?</h3>

<div>
    <hr />
    <table class="table table-bordered table-bordered">
        <tr>
            <th>
                Mã trình độ chuyên môn
            </th>
            <th>Tên trình độ chuyên môn</th>
        </tr>
        <tr>
            <td><span>TDCM</span>@Html.DisplayFor(model => model.Matrinhdochuyenmon)</td>
            <td> @Html.DisplayFor(model => model.Tentrinhdochuyenmon)</td>
        </tr>
    </table>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />&nbsp;
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
