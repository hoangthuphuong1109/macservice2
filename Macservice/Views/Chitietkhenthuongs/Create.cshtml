@model Macservice.Models.Chitietkhenthuong

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Chitietkhenthuongs">Quản lý danh sách khen thưởng</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h2>Thêm mới</h2>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label>Mã chi tiết khen thưởng <span style="color:red">*</span></label>
                <input type="text" readonly="readonly" value='Tự động tạo mã' class="form-control" />
            </div>
            <div class="form-group">
                <label>Mã nhân viên <span style="color:red">*</span></label>
                @Html.DropDownList("Manv", null, "-Chọn nhân viên-", htmlAttributes: new { @class = "form-control", @required = "@required" })
                @Html.ValidationMessageFor(model => model.Manv, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Tên khen thưởng <span style="color:red">*</span></label>
                @Html.DropDownList("Makhenthuong", null, "-Chọn loại khen thưởng-", htmlAttributes: new { @class = "form-control", @required = "@required" })
                @Html.ValidationMessageFor(model => model.Makhenthuong, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Lý do khen thưởng <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Lydokhenthuong, new { htmlAttributes = new { @class = "form-control", @type = "textbox", @required = "@required" } })
                @Html.ValidationMessageFor(model => model.Lydokhenthuong, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Tiền thưởng <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Tienthuong, new { htmlAttributes = new { @class = "form-control", @type = "textbox", @required = "@required" } })
                @Html.ValidationMessageFor(model => model.Tienthuong, "", new { @class = "text-danger" })
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })

            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
